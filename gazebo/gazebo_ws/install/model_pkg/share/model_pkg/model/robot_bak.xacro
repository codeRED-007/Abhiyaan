<?xml version="1.0" encoding="UTF-8"?>
<robot name="my_first_bot">
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.5 0.6 0.3"/>
            </geometry>
            <origin xyz="0 0 0.25"/>
        </visual>        
        <collision>
            <geometry>
                <box size="0.5 0.6 0.3"/>
            </geometry>
            <origin xyz="0 0 0.25"/>
        </collision>
        <inertial>
            <origin xyz="0 0 0.25"/>
            <mass value="20.0"/>
            <inertia ixx="1.0" ixy="0" ixz="0" iyy="1.0" iyz="0" izz="1.0"/>
        </inertial>
    </link>

    <link name = "leftwheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin rpy="0 1.5705 0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin rpy="0 1.5705 0"/>
        </collision>
        <inertial>
            <mass value="5"/>
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
        </inertial>
    </link>

    <link name = "rightwheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin rpy="0 1.5705 0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin rpy="0 1.5705 0"/>
        </collision>
        <inertial>
            <mass value="5"/>
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
        </inertial>
    </link>

    <link name = "frontcaster">
        <visual>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="5"/>
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
        </inertial>
    </link>
    <link name = "backcaster">
        <visual>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="5"/>
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
        </inertial>
    </link>

    <gazebo reference = "frontcaster">
        <collision>
          <surface>
            <friction>
              <ode>
                <mu>0</mu>
                <mu2>0</mu2>
              </ode>
            </friction>
          </surface>
        </collision>
      </gazebo> 

    <gazebo reference = "backcaster">
    <collision>
        <surface>
        <friction>
            <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            </ode>
        </friction>
        </surface>
    </collision>
    </gazebo> 

    <joint name="left_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="leftwheel"/>
        <axis xyz="-1 0 0"/>
        <origin xyz="-0.275 0 0.1"/>
    </joint>
    <joint name="right_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="rightwheel"/>
        <axis xyz="-1 0 0"/>
        <origin xyz="0.275 0 0.1"/>
    </joint>

    <joint name="front_caster" type="fixed">
        <parent link="base_link"/>
        <child link="frontcaster"/>
        <origin xyz="0 0.3 0.1 "/>
    </joint>
    <joint name="back_caster" type="fixed">
        <parent link="base_link"/>
        <child link="backcaster"/>
        <origin xyz="0 -0.3 0.1 "/>
    </joint>


  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <left_joint>left_wheel</left_joint>
      <right_joint>right_wheel</right_joint>

      <wheel_separation>0.55</wheel_separation>
      <wheel_diameter>0.2</wheel_diameter>

      <max_wheel_torque>800</max_wheel_torque>
      <max_wheel_acceleration>10.0</max_wheel_acceleration>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>
    </plugin>
  </gazebo>

  <link name = "lidar_sensor">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </visual>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="1.0" ixy="0" ixz="0" iyy="1.0" iyz="0" izz="1.0"/>
    </inertial>
  </link>

  <!-- joint connecting lidar sensor to bot-->
  <joint name = "lidar_to_bot" type="fixed">
    <origin xyz="0 0 0.45"/>
    <parent link="base_link"/>
    <child link="lidar_sensor"/>
  </joint>
  
  <link name = "base_footprint"></link>
  
  <joint name = "footprint_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin rpy="0 0 -1.5705"/>
    
  </joint>

  <gazebo reference="lidar_sensor">

    <sensor name="laser" type="ray">
        <pose> 0 0 0 0 0 0 </pose>
        <visualize>true</visualize>
        <update_rate>30</update_rate>
        <ray>
            <scan>
                <horizontal>
                    <samples>360</samples>
                    <min_angle>-3.14</min_angle>
                    <max_angle>3.14</max_angle>
                </horizontal>
            </scan>
            <range>
                <min>0.1</min>
                <max>12</max>
            </range>
        </ray>
        <plugin name="laser_controller" filename="libgazebo_ros_ray_sensor.so">
            <ros>
                <argument>~/out:=scan</argument>
            </ros>
            <output_type>sensor_msgs/LaserScan</output_type>
            <frame_name>lidar_sensor</frame_name>
        </plugin>
    </sensor>
</gazebo>
</robot>